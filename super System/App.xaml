<Application x:Class="super_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:super_System"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="BottomLineTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style x:Key="textBoxStyles" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="white"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style x:Key="ButtonStyles" TargetType="Button">
            <Setter Property="Background" Value="Orange"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="25"></Setter>
        </Style>
        <!--<Style TargetType="Border">
            <Setter Property="CornerRadius" Value="15"></Setter>
        </Style>-->
    </Application.Resources>
</Application>
